{
  "compilerOptions": {
    // Target modern JS
    "target": "esnext",
    // Module system for Node.js + ES Modules
    "module": "esnext",
    "moduleResolution": "node",
    // JSX for React 17+
    "jsx": "preserve",
    // Libs to support DOM + modern JS
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    // Enable strict type checking
    "strict": true,
    // Enable helpful features
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    // Allow JS files
    "allowJs": true,
    // Module interop + JSON imports
    "esModuleInterop": true,
    "resolveJsonModule": true,
    // Other
    // "verbatimModuleSyntax": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    // Plugins (for Next.js support)
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx", 
    "**/*.js", 
    "**/*.jsx"
  ],

  "exclude": [
    "node_modules"
  ]
}
